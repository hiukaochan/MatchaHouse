<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderCompleteActivity">

    <ImageView
        android:id="@+id/ordsuccess"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/order_success" />

    <TextView
        android:id="@+id/OrderSucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Success"
        android:fontFamily="@font/antonio"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ordsuccess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antonio"
        android:textSize="18dp"
        android:text="Your order has been placed successfully.\nFor more details, go to My Orders."
        android:gravity="center"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@+id/OrderSucText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="316dp"
        android:layout_height="70dp"
        android:text="Track My Order"
        android:backgroundTint="@color/darkmatcha"
        android:fontFamily="@font/antonio"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp" />
</androidx.constraintlayout.widget.ConstraintLayout>