<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F9F4"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <ImageView
        android:id="@+id/drinkImage"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src = "@drawable/iced_cup"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/drinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matcha Latte"
            android:fontFamily= "@font/antonio"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/drinkDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid Until"
            android:textColor = "#898989"
            android:fontFamily= "@font/antonio"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/redeemPoint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="1300 pts"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily= "@font/antonio"
        android:gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/darkmatcha"
        android:textStyle="bold" />
</LinearLayout>
