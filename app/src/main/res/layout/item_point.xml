<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F9F4"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginBottom="12dp"

    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="40dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/pointDrinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matcha Latte"
            android:fontFamily= "@font/antonio"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/pointDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 June | 12:30 PM"
            android:textColor = "#898989"
            android:fontFamily= "@font/antonio"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/totalPoint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="+12 pts"
        android:textSize="24sp"
        android:textColor="@color/darkmatcha"
        android:fontFamily= "@font/antonio"
        android:gravity="center_vertical"
        android:layout_marginEnd="40dp"

        android:textStyle="bold" />
</LinearLayout>
